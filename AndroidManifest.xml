      	<activity android:name="AboutICD" class=".AboutICD" android:label="About ICD">
      	</activity>
		<activity android:name="ModifyDB" class=".ModifyDB" android:label="Modify DataBase">
      	</activity>
      	<activity android:name="AddChapter" class=".AddChapter" android:label="Add Chapter">
